<!DOCTYPE html>
<html lang="en">
  <head>
      <meta charset="utf-8" />
      <meta name=description content="gallery {{gallery.title}} - {{album.title}}">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>{{gallery.title}} - {{album.title}}</title>
      <link type="text/css" rel="stylesheet" href="{{relative 'public/lightgallery/css/lightgallery-bundle.css'}}" />
      <link rel="stylesheet" href="{{relative 'public/core.css'}}" />
      <link rel="stylesheet" href="{{relative 'public/theme.css'}}" />
      <style>
          nav {text-align: left; border-bottom: 1px solid #d3d3d3;line-height: 150%; margin-top: 0.8em;}
          nav a {padding-right: 1em; text-decoration: underline;}
      </style>
  </head>
  <body>
    <nav>
      <a href="https://www.kurmis.com/">Home</a> <a href="https://www.kurmis.com/blog">Blog</a> <a href="https://www.kurmis.com/links">Links</a> <a href="#">Photo gallery</a> <a href="https://www.kurmis.com/password-generator/">Password generator</a>
    </nav>
    {{> content}}
    <script src="{{relative 'public/lightgallery/lightgallery.umd.js'}}"></script>
    <script src="{{relative 'public/lightgallery/plugins/thumbnail/lg-thumbnail.umd.js'}}"></script>
    <script src="{{relative 'public/lightgallery/plugins/zoom/lg-zoom.umd.js'}}"></script>
    <script src="{{relative 'public/lightgallery/plugins/autoplay/lg-autoplay.umd.js'}}"></script>
    <script src="{{relative 'public/lightgallery/plugins/fullscreen/lg-fullscreen.umd.js'}}"></script>

    <script type="text/javascript">
        lightGallery(document.getElementById('media'), {
            plugins: [lgZoom, lgThumbnail, lgAutoplay, lgFullscreen],
            thumbWidth: 80,
            controls: true,
            share: false,
            hideBarsDelay: 2000,
            getCaptionFromTitleOrAlt: false,
            loop : false,
            actualSize: false,
            rotate: false,
            flipHorizontal: false,
            flipVertical: false,
            download: true,
            counter: true,
            videojs: false,
            fullScreen: true,
            zoom: true,
            mode: 'lg-fade'
        });
    </script>
  </body>
</html>
